{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2017",
    "lib": [
      "dom",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs", // For Node.js/Express
    "moduleResolution": "node", // Standard Node.js resolution
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve", // Change to "react" if working with React; otherwise omit
    "incremental": true,
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@prisma/client": [
        "node_modules/@prisma/client"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".next"
  ]
}
